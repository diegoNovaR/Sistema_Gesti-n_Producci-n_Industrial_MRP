@model MateriaPrima

@{
    ViewData["Title"] = "Crear Materia Prima";
}

<h1>FORMULARIO PRUEBA para materia prima</h1>

<form asp-controller="MateriaPrima" asp-action="Crear" method="post">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Marca" class="form-label"></label>
        <input asp-for="Marca" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Tipo" class="form-label"></label>
        <select asp-for="Tipo" class="form-select" required>
            <option value="">-- Seleccione un tipo --</option>
            <option value="procesador">Procesador</option>
            <option value="ram">Memoria RAM</option>
            <option value="almacenamiento">Almacenamiento</option>
            <option value="placa madre">Placa Madre</option>
            <option value="pantalla">Pantalla</option>
            <option value="tarjeta video">Tarjeta de Video</option>
            <option value="chasis">Chasis</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Guardar Materia Prima</button>
        <a asp-controller="MateriaPrima" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>

