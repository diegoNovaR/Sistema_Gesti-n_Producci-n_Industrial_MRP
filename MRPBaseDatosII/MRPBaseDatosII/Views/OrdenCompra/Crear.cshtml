@model OrdenCompraViewModel
@{
    ViewData["Title"] = "Crear Orden de Compra";
}
<h1>FORMULARIO PRUEBA</h1>

<form asp-controller="OrdenCompra" asp-action="Crear" method="post">
    <!-- SELECCIONAR MATERIA PRIMA -->
    <div class="mb-3">
        <label asp-for="ordenCompra.IdMateriaPrima" class="form-label">Materia Prima</label>
        <select asp-for="ordenCompra.IdMateriaPrima"
                class="form-select"
                asp-items="@(new SelectList(Model.materiasPrimas, "Id", "Nombre"))">
            <option value="">Seleccione una materia prima</option>
        </select>
    </div>

    <!-- SELECCIONAR PROVEEDOR -->
    <div class="mb-3">
        <label asp-for="ordenCompra.IdProveedor" class="form-label">Proveedor</label>
        <select asp-for="ordenCompra.IdProveedor"
                class="form-select"
                asp-items="@(new SelectList(Model.proveedores, "Id", "NombreEntidad"))">
            <option value="">Seleccione un proveedor</option>
        </select>
    </div>

    <!-- CANTIDAD -->
    <div class="mb-3">
        <label asp-for="ordenCompra.CantidadUnidades" class="form-label">Cantidad</label>
        <input asp-for="ordenCompra.CantidadUnidades" class="form-control" />
        <span asp-validation-for="ordenCompra.CantidadUnidades" class="text-danger"></span>
    </div>

    <!-- PRECIO UNITARIO -->
    <div class="mb-3">
        <label asp-for="ordenCompra.PrecioUnitario" class="form-label">Precio Unitario</label>
        <input asp-for="ordenCompra.PrecioUnitario" class="form-control" />
        <span asp-validation-for="ordenCompra.PrecioUnitario" class="text-danger"></span>
    </div>

    <!-- BOTÓN -->
    <button type="submit" class="btn btn-primary">Guardar Orden</button>
</form>

